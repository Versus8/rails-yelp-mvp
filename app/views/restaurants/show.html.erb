<div class="container">
  <h1> <%= @restaurant.category %> </h1>

  <h2> <%= @restaurant.name %> </h2>
  <p> <%= @restaurant.address %> </p>
  <%= link_to "Back", restaurants_path %>
  <%# <%= link_to "New review", restaurant_reviews_path(@restaurant) %>

  <%# mettre un display des avis %>
  <% @restaurant.reviews.each do |review| %>
  <li> <%= review.content %> - <%= review.rating %>*  </li>
  <% end %>

  <%# ajouter le formulaise de review dans la show %>

  <%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :rating, :max => 5 %>
  <%= f.input :content %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
  <% end %>

</div>
